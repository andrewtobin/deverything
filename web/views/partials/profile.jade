
div(ng-show="user != null")

    h1 Profile
    
    form.form-horizontal(role='form')
        div.form-group
            label.col-sm-2.control-label User
            div.col-sm-4
                p.form-control-static {{ user.username }}
        div.form-group
            label.col-sm-2.control-label Name
            div.col-sm-4
                input.form-control(type='text', placeholder='Name', ng-model='user.name')
        div.form-group
            label.col-sm-2.control-label Email
            div.col-sm-4
                input.form-control(type='email', placeholder='Email', ng-model='user.email')
        div.form-group
            div.col-sm-offset-2.col-sm-4
                button.btn.btn-primary(type='submit', ng-click='saveProfile(user)') Submit
